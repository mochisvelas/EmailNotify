@model IEnumerable<EmailNotify.Models.Receiver>

@{
    ViewData["Title"] = "Send notifications";
}

<h1>Send notifications</h1>
<br />
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Email)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Name)
            </th>
            <th>
                Select
            </th>
            <th>
                <a asp-action="Notify">Notify selected</a>
            </th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.Email)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Name)
                </td>
                <td>
                    <a asp-action="Notify" asp-route-id="@item.Id">Notify</a>
                </td>
                <td>
                    <input type="checkbox">
                </td>
            </tr>
        }
    </tbody>
</table>